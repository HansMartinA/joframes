<?xml version="1.0" encoding="UTF-8"?>
<project name="Framework Project - Maven Site" default="aggregate-site" basedir=".">
	<property name="module.api" value="api" />
	<property name="module.api.external" value="api-external" />
	<property name="module.api.test.data" value="api-test-data" />
	<property name="module.ast.base" value="ast-base" />
	<property name="module.ast.ap" value="ast-ap" />
	<property name="module.ast.acha" value="ast-acha" />
	<property name="module.language" value="language-syntax" />
	<property name="module.shrike" value="shrike" />
	<property name="module.ui.cli" value="ui-cli" />
	<property name="module.ui.gui" value="ui-gui" />
	<property name="module.tests" value="test-tools" />
	<property name="site" value="target/site" />
	<property name="dest" location="./target/site" />

	<target name="aggregate-site">
		<mkdir dir="${dest}/${module.api}" />
		<copy todir="${dest}/${module.api}">
			<fileset dir="./${module.api}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.api.external}" />
		<copy todir="${dest}/${module.api.external}">
			<fileset dir="./${module.api.external}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.api.test.data}" />
		<copy todir="${dest}/${module.api.test.data}">
			<fileset dir="./${module.api.test.data}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.ast.base}" />
		<copy todir="${dest}/${module.ast.base}">
			<fileset dir="./${module.ast.base}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.ast.ap}" />
		<copy todir="${dest}/${module.ast.ap}">
			<fileset dir="./${module.ast.ap}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.ast.acha}" />
		<copy todir="${dest}/${module.ast.acha}">
			<fileset dir="./${module.ast.acha}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.language}" />
		<copy todir="${dest}/${module.language}">
			<fileset dir="./${module.language}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.shrike}" />
		<copy todir="${dest}/${module.shrike}">
			<fileset dir="./${module.shrike}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.ui.cli}" />
		<copy todir="${dest}/${module.ui.cli}">
			<fileset dir="./${module.ui.cli}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.ui.gui}" />
		<copy todir="${dest}/${module.ui.gui}">
			<fileset dir="./${module.ui.gui}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.tests}" />
		<copy todir="${dest}/${module.tests}">
			<fileset dir="./${module.tests}/${site}" />
		</copy>
		<mkdir dir="${dest}/${module.api}" />
		<copy todir="${dest}/${module.api}">
			<fileset dir="./${module.api}/${site}" />
		</copy>
	</target>
</project>
